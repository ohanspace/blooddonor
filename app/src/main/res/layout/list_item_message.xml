<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="3dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp">
        
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitXY"
            android:id="@+id/message_list_item_avatar"
            android:layout_marginEnd="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/message_list_item_avatar"
            android:textSize="16sp"
            android:text="display name"
            android:textColor="#de000000"
            android:textStyle="bold"
            android:layout_marginBottom="3dp"
            android:id="@+id/message_list_item_displayName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/12/2017"
            android:layout_toEndOf="@id/message_list_item_avatar"
            android:layout_below="@id/message_list_item_displayName"
            android:textColor="#333"
            android:id="@+id/message_list_item_createdAt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Received"
            android:layout_toEndOf="@id/message_list_item_avatar"
            android:layout_below="@id/message_list_item_createdAt"
            android:id="@+id/message_list_item_sentReceivedText"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>