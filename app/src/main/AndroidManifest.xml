<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.badhan.blooddonor">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".core.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.auth.LoginActivity"/>
        <activity android:name=".activity.auth.RegisterActivity"/>
        <activity android:name=".activity.auth.ExternalLoginActivity"/>
        <activity android:name=".activity.auth.LocalTokenAuthenticationActivity"/>
        <activity android:name=".activity.ProfileActivity"/>
        <activity android:name=".activity.message.SentMessagesActivity"/>
        <activity android:name=".activity.message.MessageActivity"/>
        <activity android:name=".activity.contact.ContactsActivity"/>
        <activity android:name=".activity.contact.ContactDetailsActivity"/>
        <activity android:name=".activity.contact.AddContactActivity"/>
        <activity android:name=".activity.InboxActivity"/>

        <activity android:name="com.soundcloud.android.crop.CropImageActivity" />
    </application>

</manifest>